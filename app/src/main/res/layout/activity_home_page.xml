<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomePage">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:background="#ff686868"
        android:id="@+id/GridLayoutHomePage">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Manufacturer"
                android:id="@+id/textViewManufacturer"/>

            <Spinner
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerManufacturer" />

        </TableRow>

        <TableRow>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Model"
                android:id="@+id/textViewModel"/>

            <Spinner
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerModel"/>
        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Year"
                android:id="@+id/textViewYear"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/From"
                android:id="@+id/textViewYearFrom"/>

            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextYearFrom"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/To"
                android:id="@+id/TextViewYearTo"/>

            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextYearTo"
                android:inputType="number" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Kilometers"
                android:id="@+id/textViewKm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/From"
                android:id="@+id/textViewKmFrom"/>

            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextKmFrom"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/To"
                android:id="@+id/textViewKmTo"/>

            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextKmTo"
                android:inputType="number" />

        </TableRow>
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Price"
                android:id="@+id/textViewPrice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/From"
                android:id="@+id/textViewPriceFrom"
                android:layout_column="1" />

            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextPriceFrom"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/To"
                android:id="@+id/textViewPriceTo"/>

            <EditText
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextPriceTo"
                android:inputType="number" />

        </TableRow>
        <TableRow>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/Order"
                android:id="@+id/textViewOrder"/>
            <Spinner
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerOrder"/>

        </TableRow>
        <TableRow>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/buttonSearch"
                android:onClick="SearchCars" />
        </TableRow>



    </TableLayout>

</RelativeLayout>
