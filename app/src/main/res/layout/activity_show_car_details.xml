                android:textColor="#ffffffff" />

            <!-- Column 2 -->
            <TextView
                android:id="@+id/TextViewInputGearbox"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_weight="1"
                android:text="@string/inputUser"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow>
            <!-- Column 1 -->
            <TextView
                android:id="@+id/TextViewDoors"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_weight="1"
                android:text="@string/doors"
                android:textColor="#ffffffff" />

            <!-- Column 2 -->
            <TextView
                android:id="@+id/TextViewInputDoors"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_weight="1"
                android:text="@string/inputUser"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow>
            <!-- Column 1 -->
            <TextView
                android:id="@+id/TextViewPrice"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_weight="1"
                android:text="@string/price"
                android:textColor="#ffffffff" />

            <!-- Column 2 -->
            <TextView
                android:id="@+id/TextViewInputPrice"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_weight="1"
                android:text="@string/inputUser"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow>
            <!-- Column 1 -->
            <TextView
                android:id="@+id/TextViewDescription"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_weight="1"
                android:text="@string/description"
                android:textColor="#ffffffff" />
        </TableRow>
        <TableRow>
            <!-- Column 2 -->
            <TextView
                android:id="@+id/TextViewInputDescription"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_weight="1"
                android:text="@string/inputUser"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow>
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/TextViewSellerDetails"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:layout_weight="1"
                android:text="@string/seller"
                android:background="#ffff0001"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow>
            <!-- Column 1 -->
            <TextView
                android:id="@+id/TextViewSellerName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_weight="1"
                android:text="@string/name"
                android:textColor="#ffffffff" />

            <!-- Column 2 -->
            <TextView
                android:id="@+id/TextViewInputSellerName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_weight="1"
